@page "/"
@using Microsoft.AspNetCore.Components.Authorization
@inject NavigationManager Navigation
@attribute [Authorize]

<PageTitle>Dashboard</PageTitle>

<h1>Admin Dashboard</h1>
<p>Welcome to the Hattie AI Admin Portal.</p>

<div class="row mt-4">
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Client Management</h5>
                <p class="card-text">Onboard new clients and manage existing ones.</p>
                <a href="clients" class="btn btn-primary">Manage Clients</a>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Knowledge Base</h5>
                <p class="card-text">Upload and manage knowledge base documents.</p>
                <a href="knowledge-base" class="btn btn-primary">Manage Knowledge Base</a>
            </div>
        </div>
    </div>
</div>
