@inherits LayoutComponentBase
@using HattieAI.Portal.Auth
@inject AuthenticationStateProvider AuthStateProvider
@inject NavigationManager NavManager

<div class="app-layout @(isSidebarOpen ? "sidebar-open" : "")">
    <!-- Mobile Overlay -->
    <div class="sidebar-overlay" @onclick="CloseSidebar"></div>

    <!-- Sidebar -->
    <aside class="sidebar">
        <div class="sidebar-header">
            <div class="brand">
                <div class="brand-logo">
                    <img src="images/hattie.png" alt="Hattie AI" />
                </div>
                <span class="brand-name">Hattie AI</span>
            </div>
            <button class="btn-close-sidebar d-md-none" @onclick="CloseSidebar">
                <i class="bi bi-x-lg"></i>
            </button>
        </div>

        <NavMenu />

        <div class="sidebar-footer">
            <AuthorizeView>
                <Authorized>
                    <div class="user-profile">
                        <div class="user-avatar">
                            @context.User.Identity?.Name?.Substring(0, 1).ToUpper()
                        </div>
                        <div class="user-info">
                            <span class="user-name">@context.User.Identity?.Name</span>
                            <span class="user-role">Admin</span>
                        </div>
                        <button class="btn-logout" @onclick="Logout" title="Logout">
                            <i class="bi bi-box-arrow-right"></i>
                        </button>
                    </div>
                </Authorized>
            </AuthorizeView>
        </div>
    </aside>

    <!-- Main Content -->
    <main class="main-content">
        <!-- Top Bar -->
        <header class="top-bar">
            <div class="top-bar-left">
                <button class="btn-toggle-sidebar d-md-none" @onclick="ToggleSidebar">
                    <i class="bi bi-list"></i>
                </button>
                <h2 class="page-title">Dashboard</h2>
            </div>
            <div class="top-bar-right">
                <a href="#" class="help-link">Help & Docs</a>
            </div>
        </header>

        <div class="content-wrapper">
            @Body
        </div>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>

<style>
    :root {
        --sidebar-width: 260px;
        --header-height: 70px;
    }

    .app-layout {
        display: flex;
        height: 100vh;
        background-color: var(--background-color);
        overflow: hidden;
        position: relative;
    }

    /* Sidebar Styles */
    .sidebar {
        width: var(--sidebar-width);
        background-color: #000000 !important; /* Pure Black */
        color: #ffffff !important;
        display: flex;
        flex-direction: column;
        border-right: 1px solid #333;
        flex-shrink: 0;
        transition: transform 0.3s ease;
        z-index: 100;
        height: 100%;
        box-shadow: 4px 0 24px rgba(0,0,0,0.1);
    }

    .sidebar-header {
        height: 80px; /* Slightly taller header */
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 0 1.75rem;
        border-bottom: 1px solid transparent; /* Remove border for cleaner look */
    }

    .brand {
        display: flex;
        align-items: center;
        gap: 0.75rem;
        font-weight: 700;
        font-size: 1.25rem;
        color: #ffffff;
    }

    .brand-logo {
        width: 40px;
        height: 40px;
        background: transparent !important;
        border-radius: 10px;
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: none;
        border: none;
    }

    .brand-logo img {
        width: 100%;
        height: 100%;
        object-fit: contain;
    }

    .sidebar-footer {
        margin-top: auto;
        padding: 1.5rem;
        border-top: 1px solid #333;
    }

    .user-profile {
        display: flex;
        align-items: center;
        gap: 1rem;
        padding: 0.75rem;
        border-radius: 12px;
        transition: background-color 0.2s;
        cursor: pointer;
        color: white;
    }

    .user-profile:hover {
        background-color: #1a1a1a;
    }

    .user-avatar {
        width: 36px;
        height: 36px;
        background: var(--secondary-color);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 600;
        color: white;
    }

    .user-info {
        flex: 1;
        display: flex;
        flex-direction: column;
        font-size: 0.85rem;
        overflow: hidden;
    }

    .user-name {
        font-weight: 600;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
    }

    .user-role {
        color: #9ca3af;
        font-size: 0.75rem;
    }

    .btn-logout {
        background: none;
        border: none;
        color: #9ca3af;
        cursor: pointer;
        padding: 0.25rem;
        transition: color 0.2s;
    }

    .btn-logout:hover {
        color: #ffffff;
    }

    /* Main Content Styles */
    .main-content {
        flex: 1;
        display: flex;
        flex-direction: column;
        overflow: hidden;
        width: 100%;
    }

    .top-bar {
        height: var(--header-height);
        background-color: var(--surface-color);
        border-bottom: 1px solid var(--border-color);
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 0 2rem;
    }

    .top-bar-left {
        display: flex;
        align-items: center;
        gap: 1rem;
    }

    .page-title {
        font-size: 1.25rem;
        font-weight: 600;
        margin: 0;
        color: var(--text-color);
    }

    .help-link {
        color: var(--text-muted);
        text-decoration: none;
        font-size: 0.9rem;
        transition: color 0.2s;
    }

    .help-link:hover {
        color: var(--primary-color);
    }

    .content-wrapper {
        flex: 1;
        overflow-y: auto;
        padding: 2rem;
    }

    /* Mobile Styles */
    .sidebar-overlay {
        position: fixed;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(0, 0, 0, 0.5);
        z-index: 90;
        opacity: 0;
        pointer-events: none;
        transition: opacity 0.3s ease;
    }

    .btn-toggle-sidebar {
        background: none;
        border: none;
        font-size: 1.5rem;
        color: var(--text-color);
        padding: 0;
        cursor: pointer;
    }

    .btn-close-sidebar {
        background: none;
        border: none;
        font-size: 1.25rem;
        color: var(--text-muted);
        cursor: pointer;
    }

    @@media (max-width: 768px) {
        .sidebar {
            position: fixed;
            top: 0;
            left: 0;
            bottom: 0;
            transform: translateX(-100%);
            box-shadow: var(--shadow-lg);
        }

        .app-layout.sidebar-open .sidebar {
            transform: translateX(0);
        }

        .app-layout.sidebar-open .sidebar-overlay {
            opacity: 1;
            pointer-events: auto;
        }

        .top-bar {
            padding: 0 1rem;
        }

        .content-wrapper {
            padding: 1rem;
        }
        
        .sidebar-footer {
            display: flex; /* Show footer on mobile sidebar */
        }
    }
</style>

@code {
    private bool isSidebarOpen = false;

    private void ToggleSidebar()
    {
        isSidebarOpen = !isSidebarOpen;
    }

    private void CloseSidebar()
    {
        isSidebarOpen = false;
    }

    private async Task Logout()
    {
        var customAuthStateProvider = (CustomAuthStateProvider)AuthStateProvider;
        await customAuthStateProvider.UpdateAuthenticationState(null);
        NavManager.NavigateTo("/login");
    }

    protected override void OnAfterRender(bool firstRender)
    {
        if (firstRender)
        {
            NavManager.LocationChanged += OnLocationChanged;
        }
    }

    private void OnLocationChanged(object? sender, LocationChangedEventArgs e)
    {
        // Close sidebar when navigating on mobile
        if (isSidebarOpen)
        {
            isSidebarOpen = false;
            StateHasChanged();
        }
    }

    public void Dispose()
    {
        NavManager.LocationChanged -= OnLocationChanged;
    }
}
